@model IEnumerable<TutorGet.Models.UserEvent>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>My Event Bookmark</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Event.EventName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Event.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Event.Time)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Event.EventName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Event.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Event.Time)
        </td>
        <td>
            <a href="@Url.Action("Delete", "UserEvents", new { id = item.Id })" class="glyphicon glyphicon-trash" aria-label="Delete">
            </a>
    </td>
</tr>
}

</table>
