
@{
    ViewBag.Title = "SendEmail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Send Promotion Email</h3>
@using (Html.BeginForm("EmailUser", "Users", FormMethod.Post,
    new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()


    if (@ViewBag.Result != null && ViewBag.Alert == null)
    {
        <div class="alert alert-success">@ViewBag.Result</div>
    }

    if (@ViewBag.Result == null && ViewBag.Alert != null)
    {
        <div class="alert alert-danger">@ViewBag.Alert</div>
    }

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-10">
                <label calss="control-label" for="Name">Attachment</label>
                <input type="file" required name="uploadFile" class="btn btn-default" accept=".pdf" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Send" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to User List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

